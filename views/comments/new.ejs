<% include ../partials/header %>

<div class="container">
	<div class="row">

		<h1 style="text-align:center">Add New Comment to <%= listitem.name %></h1>
		<div style="width:30%;margin:25px auto;">
			<form action="/listitems/<%= listitem._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" name="comment[text]" type="text" placeholder="text">
				</div>
				<div class="form-group">
					<input class ="btn btn-primary btn-lg btn-default btn-block" type="submit">
				</div>
			</form>
			<a href="/listitems">Go Back</a>
		</div>

		
	</div>
</div>

<% include ../partials/footer %>
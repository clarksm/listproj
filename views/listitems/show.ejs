<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Living List</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= listitem.image %>">
				<div class="caption-full">
					<h4><a><%= listitem.name %></a></h4>
					<p><%= listitem.description %></p>
					<p> <em>Submitted By <%= listitem.author.username %></em></p>
					<% if(currentUser && listitem.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-xs btn-warning" href="/listitems/<%= listitem._id %>/edit">Edit List Item</a>
						<form class="delete-form" action="/listitems/<%= listitem._id %>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/listitems/<%= listitem._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% listitem.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 days ago</span>
							<p> 
								<%= comment.text %> 
							</p>
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
								<a href="/listitems/<%=listitem._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
								<form class="delete-form" action="/listitems/<%=listitem._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
									<input type="submit" class="btn btn-xs btn-danger" value="Delete">
								</form>
							<% } %>
					</div>
				</div>

				<% }) %>
			</div>
		</div>
	</div>
</div>


<% include ../partials/footer %>
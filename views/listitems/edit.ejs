<% include ../partials/header %>

<div class="container">
	<div class="row">

		<h1 style="text-align:center">Edit <%= listitem.name %></h1>
		<div style="width:30%;margin:25px auto;">
			<form action="/listitems/<%= listitem._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" name="listitem[name]" type="text" value="<%= listitem.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" name="listitem[image]" type="text" value="<%= listitem.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" name="listitem[description]" type="text" value="<%= listitem.description %>">
				</div>
				<div class="form-group">
					<input class ="btn btn-primary btn-lg btn-default btn-block" type="submit">
				</div>
			</form>
			<a href="/listitems">Go Back</a>
		</div>

		
	</div>
</div>

<% include ../partials/footer %>
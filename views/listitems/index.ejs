<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to the Life List!</h1>
			<p>
				<a class="btn btn-primary btn-large" href="listitems/new">Add a New List Item</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap">

		<% listitems.forEach(function(listitem){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= listitem.image %>">
					<div class="caption">
						<h4><%= listitem.name %></h4>
					</div>
					<p>
						<a class="btn btn-primary" href="/listitems/<%= listitem._id %>">More Info</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>	
</div>

<% include ../partials/footer %>